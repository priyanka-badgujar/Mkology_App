<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root_otp_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:padding="2dp"
    android:orientation="horizontal"
    android:weightSum="6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/otp_edit_box1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:background="@drawable/edittext_curve_bg"/>

    <EditText
        android:id="@+id/otp_edit_box2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textCursorDrawable="@null"
        android:inputType="number"
        android:maxLength="1"
        android:background="@drawable/edittext_curve_bg"/>

    <EditText
        android:id="@+id/otp_edit_box3"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:maxLength="1"
        android:background="@drawable/edittext_curve_bg"/>

    <EditText
        android:id="@+id/otp_edit_box4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_curve_bg" />

    <EditText
        android:id="@+id/otp_edit_box5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_curve_bg" />

    <EditText
        android:id="@+id/otp_edit_box6"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_weight="1"
        android:inputType="number"
        android:maxLength="1"
        android:textCursorDrawable="@null"
        android:background="@drawable/edittext_curve_bg" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/profile_rectangle"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:lineSpacingExtra="8dp"
            android:layout_margin="20dp"/>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            card_view:cardElevation="8dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardBackgroundColor="@color/colorGrey">

            <LinearLayout
                android:id="@+id/contact_us_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp" />

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/boxMarginRight"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:drawablePadding="@dimen/boxDrawablePadding"
                    android:paddingLeft="@dimen/boxPaddingRight"
                    android:paddingRight="@dimen/boxPaddingRight"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/email_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/boxMarginRight"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawablePadding="@dimen/boxDrawablePadding"
                    android:paddingLeft="@dimen/boxPaddingRight"
                    android:paddingRight="@dimen/boxPaddingRight"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>


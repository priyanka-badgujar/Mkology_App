<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_chapter"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:background="@drawable/background_texture">

        <ImageView
            android:id="@+id/mk_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mk_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/itemHeaderTextSize"
            android:paddingRight="5dp"
            android:paddingLeft="65dp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"/>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorText"
            android:textSize="@dimen/itemPriceTextSize" />

        <TextView
            android:id="@+id/item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorText"
            android:layout_below="@id/item_description"
            android:textSize="@dimen/itemPriceTextSize" />

        <TextView
            android:id="@+id/item_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorText"
            android:layout_below="@id/item_duration"
            android:textSize="@dimen/itemPriceTextSize" />

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@id/item_watch_count"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/itemPriceTextSize"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/play_video"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_rectangle_button_card"
                android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                android:text="@string/watch_now"
                android:textColor="@color/colorWhite"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingLeft="4dp"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
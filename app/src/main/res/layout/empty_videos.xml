<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center">

    <ImageView
        android:id="@+id/no_videos"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/no_videos"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rectangle_card"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_videos"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/no_videos_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            android:paddingTop="24dp"
            android:text="@string/no_videos"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_videos_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#929292"
            android:layout_marginTop="8dp"
            android:text="@string/empty_videos"
            android:fontFamily="sans-serif" />
    </LinearLayout>

</RelativeLayout>